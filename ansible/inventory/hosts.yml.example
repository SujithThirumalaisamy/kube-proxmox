---
all:
  children:
    k8s_cluster:
      children:
        # Kubernetes Control Plane Nodes
        # First master (masters[0]) initializes the cluster
        # Additional masters join as control-plane nodes
        masters:
          hosts:
            k8s-master-1:
              ansible_host: 192.168.0.101
            k8s-master-2:
              ansible_host: 192.168.0.102

        # Kubernetes Worker Nodes
        workers:
          hosts:
            k8s-worker-1:
              ansible_host: 192.168.0.111
            k8s-worker-2:
              ansible_host: 192.168.0.112
            k8s-worker-3:
              ansible_host: 192.168.0.113

  # Global Variables
  vars:
    ansible_user: ubuntu # Cloud-init username (must match terraform)
    ansible_ssh_private_key_file: ~/.ssh/id_ed25519
    ansible_python_interpreter: /usr/bin/python3
